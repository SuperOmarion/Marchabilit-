<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/skybg"
    tools:context="com.sorbonne.isir.etudedelamarchabilite.UploadVoice">
        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.sorbonne.isir.etudedelamarchabilite.UploadVoice">

            <TextView
                android:id="@+id/titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:text=""
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/micro"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="50dp">
                <Button
                    android:id="@+id/parler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="180dp"
                    android:text="parler"
                    android:textSize="16dp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:backgroundTint="@color/colorPrimary"/>

                <Button
                    android:id="@+id/finir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="180dp"
                    android:backgroundTint="#DD0000"
                    android:text="ArrÃªter"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="50dp">
                <Button
                    android:id="@+id/ecouter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="180dp"
                    android:text="Lecture"
                    android:textSize="16dp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:backgroundTint="@color/colorPrimaryDark"/>
                <Button
                    android:id="@+id/arreter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="180dp"
                    android:text="pause"
                    android:textSize="16dp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:backgroundTint="#993422"/>

            </LinearLayout>




            <EditText android:id="@+id/VoiceComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginTop="50dp"
                android:hint="Description"/>


            <Button
                android:id="@+id/envoiVoix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="envoyer"
                android:textSize="16dp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:backgroundTint="@color/colorAccent"/>
        </TableLayout>

    </ScrollView>


